        </a>
        <div class="media-body">
            <?php
            echo sprintf('
                <div class="media-heading">
                    <a href="%s" target="_blank" style="margin-right: 20px;">%s</a>
                    <span class="muted">%s</span>
                </div>
                <p>%s
                ',
                $item['user']['url'],
                $item['user']['name'],
                _date($item['time']),
                $item['content']
            ); 
