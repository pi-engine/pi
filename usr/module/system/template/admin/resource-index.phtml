<script>
    var ResourceItemView = Backbone.View.extend({
        tagName: 'tr',
        template: $('#temp-resource').html(),
        events: {
            'click .js-action': 'assignAction'
        },
        initialize: function() {
            this.model.on('change', this.render, this);
        },
        assignAction: function(e) {
            var action = $(e.currentTarget).attr('data-action'),
                prev = this.model.previousAttributes(),
                self = this,
                obj;
            if (action == 'allow') {
                obj = {
                    direct: 1,
                    perm: 1
                }
            } else if (action == 'deny') {
                obj = {
                    direct: -1,
                    perm: -1
                }
            } else {
                obj = {
                    direct: 0
                }
            }
            this.model.set(obj);
            $.post('<?php echo $this->url('', array('action' => 'assign', 'role' => $role)); ?>', this.model.previousAttributes()).done(function(res) {
                res = $.parseJSON(res);
                self.model.set(res.data);
            }).error(function() {
                systemMessage.fail("<?php _e('An error occurred, please try again later.'); ?>");
                self.model.set(prev);
            });
        },
        render: function() {
            this.$el.html(_.template(this.template, this.model.toJSON()));
            return this;
        }
    });
    var ResourceListView = Backbone.View.extend({
        el: $("#js-resources"),
        initialize: function() {
            this.render();
        },
        render: function() {
            var c = this.collection.models;
            for (var i = 0, l = c.length; i < l; i++) {
                this.$el.append(new ResourceItemView({
                    model: c[i]
                }).render().el);
            }
        }
   });
   new ResourceListView({
       collection: new Backbone.Collection(<?php echo json_encode($resources); ?>)
   });
</script>