        switch (e.keyCode) {
        case 9: // tab
        case 13: // enter
        case 27: // escape
            e.preventDefault();
            break;
        case 38: // up arrow
            e.preventDefault();
            this.prev();
            break;
        case 40: // down arrow
            e.preventDefault();
            this.next();
            break;
