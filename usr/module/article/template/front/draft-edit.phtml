        var el = this.input;
        if (/[\uFF0C\,]$/.test(el.val())) { //chinese comma
            el.val(el.val().replace(/[\uFF0C\,]$/,""));
            $.trim(el.val()) &&  this.addNewOne();
        }
        if (e.keyCode == 13 && $.trim(el.val()) && !this.shown) {
            this.addNewOne();
        }
        switch (e.keyCode) {
            case 40: // down arrow
            case 38: // up arrow
            case 16: // shift
            case 17: // ctrl
            case 18: // alt
            case 39:
            case 37:
            case 188: //,
                break;
            case 9: // tab
            case 13: // enter
                if (!this.shown) return;
                this.select();
                break;
            case 27: // escape
                if (!this.shown) return;
                this.hide();break;
            default:
                this.lookup();
