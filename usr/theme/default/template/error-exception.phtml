    <ul class="unstyled">
        <?php while($e): ?>
        <li>
            <h3><?php echo get_class($e); ?></h3>
            <dl>
                <dt>File:</dt>
                <dd>
                    <pre class="prettyprint linenums"><?php echo Pi::service('security')->path($e->getFile()); ?>: <?php echo $e->getLine(); ?></pre>
